@using Phoenix.Domain
<h3>CustomerEditComponent</h3>

<EditForm Model="@customerModel">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="col-12">
        <div class="form-group">
            <label for="customer">Customer</label>
            <input type="text" class="form-control" id="customer" placeholder="Customer" @bind="customerModel.Id" />
        </div>
        <div class="form-group">
            <label for="description">Name</label>
            <input type="text" class="form-control" id="name" placeholder="Description" @bind="customerModel.Name" />
        </div>
        <div class="form-group">
            <label for="Street1">Street1</label>
            <input type="text" class="form-control" id="Street1" placeholder="Street1" @bind="customerModel.Street1" />
        </div>
        <div class="form-group">
            <label for="Street2">Street2</label>
            <input type="text" class="form-control" id="Street2" placeholder="Street2" @bind="customerModel.Street2" />
        </div>
        <div class="form-group">
            <label for="City">City</label>
            <input type="text" class="form-control" id="City" placeholder="City" @bind="customerModel.City" />
        </div>
        <div class="form-group">
            <label for="County">County</label>
            <input type="text" class="form-control" id="County" placeholder="County" @bind="customerModel.County" />
        </div>
        <div class="form-group">
            <label for="Postcode">Postcode</label>
            <input type="text" class="form-control" id="Postcode" placeholder="Postcode" @bind="customerModel.Postcode" />
        </div>
