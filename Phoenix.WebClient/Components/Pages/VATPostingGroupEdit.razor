@page "/vatpostinggroupedit/{id:int?}"
@using Phoenix.Domain
@rendermode InteractiveServer
@* Edit Page for VATPostingGroupModel *@
<h3>VAT Posting Groups</h3>
<div class="row">
    <div class="col-12">
        <div class="form-group">
            <label for="vatPostingGroup">VAT Posting Group</label>
            <input type="text" class="form-control" id="vatPostingGroup" placeholder="VAT Posting Group" @bind="vatPostingGroup.Id" />
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" class="form-control" id="description" placeholder="Description" @bind="vatPostingGroup.Name" />
        </div>
    </div>
</div>
@code {
    [Parameter] public int? id { get; set; }
    private VATPostingGroupModel vatPostingGroup = new VATPostingGroupModel();
}
