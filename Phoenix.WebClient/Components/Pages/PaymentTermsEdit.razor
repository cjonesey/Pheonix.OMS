@* Edit Page for PaymentTermsModel *@
@page "/paymenttermsedit/{id:int?}"
@using Phoenix.Domain
@rendermode InteractiveServer
<h3>Payment Terms</h3>
<div class="row">
    <div class="col-12">
        <div class="form-group">
            <label for="paymentTerms">VAT Posting Group</label>
            <input type="text" class="form-control" id="paymentTerms" placeholder="Payment Terms" @bind="paymentTermsModel.Id" />
        </div>
        <div class="form-group">
            <label for="description">Name</label>
            <input type="text" class="form-control" id="name" placeholder="Description" @bind="paymentTermsModel.Name" />
        </div>
    </div>
</div>
@code {
    [Parameter] public int? id { get; set; }
    private PaymentTermsModel paymentTermsModel = new PaymentTermsModel();
}
